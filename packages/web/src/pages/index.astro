---
import { Button } from "zulse/Button"
import { Card } from "zulse/Card"
import { Textarea } from "zulse/Textarea"
import Layout from "../layouts/Layout.astro"
import { Showcase, ShowcaseBox } from "zulse/Showcase"
import { Input } from "zulse/Input"
import { DropdownShowcase } from "~/components/showcases/Dropdown"
import { Checkbox } from "zulse/Checkbox"
import { Switch } from "zulse/Switch"
import { DialogShowcase } from "~/components/showcases/Dialog"
import { ButtonGroupShowcase } from "~/components/showcases/ButtonGroup"
---

<Layout title="Zulse: Zihan's design">
	<h1>Zulse is Zihan's design</h1>
	<h2>Button</h2>
	<ShowcaseBox>
		<Showcase><Button client:idle>Follow</Button></Showcase>
		<Showcase>
			<Button variant="primary" client:idle>Follow</Button>
		</Showcase>
		<Showcase><Button variant="text" client:idle>Follow</Button></Showcase>
	</ShowcaseBox>
	<h2>Button Group</h2>
	<ButtonGroupShowcase client:idle />
	<h2>Input</h2>
	<ShowcaseBox>
		<Showcase><Input client:idle /></Showcase>
	</ShowcaseBox>
	<h2>Dropdown</h2>
	<DropdownShowcase client:idle />
	<h2>Checkbox</h2>
	<ShowcaseBox>
		<Showcase><Checkbox client:idle /></Showcase>
	</ShowcaseBox>
	<h2>Switch</h2>
	<ShowcaseBox>
		<Showcase><Switch client:idle /></Showcase>
	</ShowcaseBox>
	<h2>Dialog</h2>
	<DialogShowcase client:idle />
	<h2>Textarea</h2>
	<ShowcaseBox>
		<Showcase><Textarea placeholder="Hello zulse" client:idle /></Showcase>
	</ShowcaseBox>
	<h2>Card</h2>
	<ShowcaseBox>
		<Showcase><Card client:idle><h1>Card title</h1></Card></Showcase>
	</ShowcaseBox>
	<p>All the components are open source.</p>
</Layout>
